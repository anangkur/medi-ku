<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardWrapHeight"
    android:layout_width="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:layout_marginStart="@dimen/dimens_20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ConstraintWrapHeight">
        <ImageView
            android:id="@+id/iv_item_regular"
            style="@style/ImageViewHeightRatio"
            android:layout_width="300dp"
            android:background="@color/gray"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_item_regular"
            style="@style/TextRegularNormal"
            android:layout_width="0dp"
            tools:text="@string/lipsum_short"
            android:lines="3"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv_item_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/iv_item_regular"
            app:layout_constraintRight_toRightOf="@id/iv_item_regular"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>