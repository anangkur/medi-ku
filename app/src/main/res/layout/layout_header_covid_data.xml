<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintWrapHeight"
    android:layout_margin="@dimen/dimens_20dp"
    app:layout_constraintTop_toBottomOf="@id/tv_label_other_country">
    <TextView
        android:id="@+id/tv_country"
        style="@style/TextBoldNormal"
        android:layout_width="@dimen/dimens_0dp"
        android:text="@string/label_country"
        android:textAlignment="textStart"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintTop_toTopOf="@id/tv_country"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_confirmed"/>
    <RelativeLayout
        android:id="@+id/tv_confirmed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@id/tv_country"
        app:layout_constraintLeft_toRightOf="@id/tv_country"
        app:layout_constraintRight_toLeftOf="@id/tv_death"
        app:layout_constraintBottom_toBottomOf="@id/tv_country">
        <ImageView
            style="@style/ImageView10"
            android:src="@drawable/dot_yellow"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tv_death"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@id/tv_country"
        app:layout_constraintLeft_toRightOf="@id/tv_confirmed"
        app:layout_constraintRight_toLeftOf="@id/tv_recovered"
        app:layout_constraintBottom_toBottomOf="@id/tv_country">
        <ImageView
            style="@style/ImageView10"
            android:src="@drawable/dot_red"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tv_recovered"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@id/tv_country"
        app:layout_constraintLeft_toRightOf="@id/tv_death"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_country">
        <ImageView
            style="@style/ImageView10"
            android:src="@drawable/dot_green"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>