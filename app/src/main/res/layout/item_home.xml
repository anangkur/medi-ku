<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintWrapHeight"
    android:padding="@dimen/dimens_10dp"
    android:layout_marginTop="@dimen/dimens_20dp"
    android:layout_marginStart="@dimen/dimens_20dp"
    android:layout_marginEnd="@dimen/dimens_20dp"
    android:background="@drawable/rect_rounded_4dp_gradient_blue">
    <ImageView
        android:id="@+id/iv_item_home"
        style="@style/ImageView48"
        android:src="@drawable/ic_pills"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_item_home"
        style="@style/TextBoldExtraBig"
        android:layout_width="@dimen/dimens_0dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/dimens_20dp"
        app:layout_constraintTop_toTopOf="@id/iv_item_home"
        app:layout_constraintBottom_toTopOf="@id/tv_diagnosis_home"
        app:layout_constraintLeft_toRightOf="@id/iv_item_home"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_diagnosis_home"
        style="@style/TextBoldNormal"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dimens_4dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:lines="2"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tv_item_home"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_home"
        app:layout_constraintLeft_toLeftOf="@id/tv_item_home"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_date_home"
        style="@style/TextBoldNormal"
        android:text="@string/app_name"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>